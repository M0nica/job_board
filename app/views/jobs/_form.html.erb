<!-- erb is being used here to embed ruby into an HTML file -->
<%= form_for @job do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title , title: 'this is a tooltip!', class: 'my-css-class'  %>
  </div>
  <div>
    <%= f.label :company %>
    <%= f.text_field :company  %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description, size: '60x6' %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
